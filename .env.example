# ==================================================
# Off the Grid - Hackathon Platform
# Environment Variables Reference
# ==================================================

# ==================================================
# BACKEND CONFIGURATION
# ==================================================
# These go in: backend/src/Blackbaud.Hackathon.Platform.Service/appsettings.json

# Blackbaud ID (BBID) OAuth Settings
# Get these from: https://developer.blackbaud.com/
BBID_CLIENT_ID=your_client_id_here
BBID_CLIENT_SECRET=your_regenerated_secret_here  # ⚠️ MUST REGENERATE IN PORTAL

# Database Connection
# For LocalDB (default):
CONNECTION_STRING=Server=(localdb)\\mssqllocaldb;Database=HackathonPlatform;Trusted_Connection=true;MultipleActiveResultSets=true
# For SQL Server:
# CONNECTION_STRING=Server=localhost;Database=HackathonPlatform;User Id=sa;Password=YourPassword;TrustServerCertificate=true;

# JWT Token Settings
JWT_SECRET_KEY=your_secure_secret_key_minimum_32_characters_long_for_production
JWT_ISSUER=HackathonPlatform
JWT_AUDIENCE=HackathonPlatformClient
JWT_EXPIRATION_MINUTES=60

# CORS Allowed Origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:4200,https://localhost:4200

# OAuth Endpoints (usually don't need to change these)
BBID_AUTHORIZATION_ENDPOINT=https://app.blackbaud.com/oauth/authorize
BBID_TOKEN_ENDPOINT=https://oauth2.sky.blackbaud.com/token
BBID_REDIRECT_URI=http://localhost:5000/api/auth/callback


# ==================================================
# FRONTEND CONFIGURATION
# ==================================================
# These go in: frontend/src/environments/environment.ts

# API Base URL
API_URL=http://localhost:5000/api

# Blackbaud OAuth
BBID_CLIENT_ID=your_client_id_here  # Same as backend
BBID_AUTH_URL=https://app.blackbaud.com/oauth/authorize
FRONTEND_REDIRECT_URI=http://localhost:4200/auth/callback


# ==================================================
# PRODUCTION VALUES (for deployment)
# ==================================================

# Backend Production
# BBID_CLIENT_ID=prod_client_id
# BBID_CLIENT_SECRET=prod_regenerated_secret
# CONNECTION_STRING=Server=your-sql-server.database.windows.net;Database=HackathonPlatform;User Id=sqluser;Password=YourPassword;
# JWT_SECRET_KEY=super_secure_production_key_at_least_32_characters_random
# CORS_ALLOWED_ORIGINS=https://your-app.azurewebsites.net
# BBID_REDIRECT_URI=https://your-api.azurewebsites.net/api/auth/callback

# Frontend Production
# API_URL=https://your-api.azurewebsites.net/api
# FRONTEND_REDIRECT_URI=https://your-app.azurewebsites.net/auth/callback
